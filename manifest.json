{
	"name": "Cứu Truyện - Chọn Chương",
	"description": "Phát triển bởi Khang",
	"version": "0.7",

	"manifest_version": 3,

	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png"
	},
	
	"host_permissions": [
		"https://cuutruyen.net/*",
		"https://hetcuutruyen.net/*",
		"https://cuutruyent9sv7.xyz/*"
	],
	"permissions": [
		"activeTab",
		"tabs", 
		"storage",
		"webNavigation",
		"unlimitedStorage"
	],
	
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": "icons/icon16.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://cuutruyen.net/*",
				"https://hetcuutruyen.net/*",
				"https://cuutruyent9sv7.xyz/*"
			],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
	"options_page": "options.html"
}